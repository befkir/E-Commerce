@model List<Category>
@{
    ViewData["Title"] = "Index";
}

<div class="container p-3">
    <div class="col-6 text-primary"> <h2>Category List</h2> </div>
    <div class="col-6">Create New Category</div>
</div>

@if (Model!=null && Model.Count() > 0)
{
    <table class="table table-bordered table-striped">
        <thead>
            <tr>
                <th>
                    Category Name
                </th>
                <th>
                    Display Order
                </th>
            </tr>
        </thead>
        <tbody>
            @foreach (var entry in Model)
            {
                <tr>
                    <td>@entry.Name</td>
                    <td>@entry.DisplayOrder</td>
                </tr>
            }
        </tbody>
    </table>
}
else{
    <p>No Category exist</p>
}